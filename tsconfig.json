{
    "exclude": [
        "./node_modules"
    ],
    "compilerOptions": {
        "lib": [
            "es2015",
            "dom"
        ],
        "outDir": "./dist/ts",
        "target": "es6",
        "module": "es2015",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true
    },
    "include": ["src/**/lib/*"]
}